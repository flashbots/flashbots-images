#!/usr/bin/env bash
set -euo pipefail

echo "Installing flowproxy..."
# https://github.com/BuilderNet/FlowProxy/releases
EXPECTED_SHA256=774494ff677470bd9f4fc2a9f5ca1112d4721f74c9c67b4f76ecef3dca5360ad
mkdir -p $DESTDIR/usr/bin
curl -fSsL -o $DESTDIR/usr/bin/flowproxy https://github.com/BuilderNet/FlowProxy/releases/download/v2.0.2/flowproxy
echo "${EXPECTED_SHA256}" $DESTDIR/usr/bin/flowproxy | sha256sum --check
chmod +x $DESTDIR/usr/bin/flowproxy
