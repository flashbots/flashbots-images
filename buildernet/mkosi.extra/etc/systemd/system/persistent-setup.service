[Unit]
DefaultDependencies=no
Wants=systemd-udev-settle.service
After=systemd-udev-settle.service
Before=local-fs-pre.target

[Service]
Type=oneshot
RemainAfterExit=yes
Environment=BUILDERNET_TARGET_LUN=__BUILDERNET_TARGET_LUN
ExecStart=/usr/bin/persistent-setup $BUILDERNET_TARGET_LUN
# TODO remove once confirmed
TimeoutStartSec=120

[Install]
WantedBy=cryptsetup.target
