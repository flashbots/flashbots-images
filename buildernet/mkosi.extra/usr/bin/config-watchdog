#!/bin/bash

set -eu -o pipefail

source /usr/bin/helper-functions.sh

RBUILDER_PERSISTENT_DIR="/var/lib/persistent/rbuilder"
RBUILDER_STATUS_FLAG_FILE="${RBUILDER_PERSISTENT_DIR}/rbuilder.enabled"
# locally exposed BuilderHub API proxied through CVM proxy
RBUILDER_BIDDING_CONFIG_DIR="/etc/rbuilder-bidding"
BHUB_URL_PROXIED="http://localhost:7937/api/l1-builder/v1/configuration"
BHUB_CONFIG_FILE="/etc/init-config-watchdog.json"

function cleanup() {
  rm -f "${BHUB_CONFIG_FILE}"
}

trap cleanup EXIT

function check_rbuilder_enabled() {
  local bhub_config_file="$1"
  local rbuilder_enabled
  rbuilder_enabled="$(jq -r '.rbuilder.enabled' "$bhub_config_file")"

  if [[ ! -d "$RBUILDER_PERSISTENT_DIR" ]]; then
    mkdir -p "$RBUILDER_PERSISTENT_DIR"
  fi

  if [[ $rbuilder_enabled == true ]]; then
    if [[ ! -f "$RBUILDER_STATUS_FLAG_FILE" ]]; then
      : > "$RBUILDER_STATUS_FLAG_FILE"
      log "rbuilder-status-watchdog: rbuilder is enabled in BuilderHub"
      systemctl restart rbuilder
    fi
  else
    if [[ -f "$RBUILDER_STATUS_FLAG_FILE" ]]; then
      rm -f "$RBUILDER_STATUS_FLAG_FILE"
      log "rbuilder-status-watchdog: rbuilder is disabled in BuilderHub"
      systemctl stop rbuilder
    fi
  fi
}

function check_subsidies_config_update() {
  local bhub_config_file="$1"
  /usr/bin/render-config.sh --unsafe "$bhub_config_file" "$RBUILDER_BIDDING_CONFIG_DIR/bidding-service.toml.mustache" > /tmp/bidding-service.toml.tmp

  if ! diff -q /tmp/bidding-service.toml.tmp "$RBUILDER_BIDDING_CONFIG_DIR/bidding-service.toml" &>/dev/null; then
    mv /tmp/bidding-service.toml.tmp "$RBUILDER_BIDDING_CONFIG_DIR/bidding-service.toml"
    systemctl reload rbuilder-bidding
    log "update-subsidies-config: Updated bidding service config"
  fi
}

curl -fsSL -o "$BHUB_CONFIG_FILE" --retry 3 --retry-delay 5 --retry-connrefused "$BHUB_URL_PROXIED"

if [[ ! -s "$BHUB_CONFIG_FILE" ]]; then
  log "rbuilder-status-watchdog: Failed to fetch configuration."
  exit 1
fi

check_rbuilder_enabled "$BHUB_CONFIG_FILE"
check_subsidies_config_update "$BHUB_CONFIG_FILE"
